extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Paciente: #{consulta.nome}
      h2 DATA: #{consulta.data}
    .w3-container
        p Nome: #{consulta.nome}
        p Nif : #{consulta.nif}
        p Idade: #{consulta.idade}
        p Sexo: #{consulta.sexo}
        p Número de operaçõe: #{consulta.nr_operacoes}
        h1 Intervenções efetuadas
        table.w3-table-all
            tr
            th Código
            th Nome
            th Descrição
            each interv in consulta.operacoes
                tr
                    td
                        a(href="/intervencoes/"+interv.codigo) #{interv.codigo}
                    td= interv.nome
                    td= interv.descricao
    footer.w3-container.w3-teal
        address Gerado por João Castro A97223::EngWeb2023  
            a(href="/") [Voltar]
